<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_campaign_perforemance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shane.MAV.MAV_UI.CampaignPerformance">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#b2b2b2"
        android:layout_weight="0.15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/positiveResponses"
        android:text="Positive Responses :"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Negative Responses :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/positiveResponses"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/negativeResponses"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Failed Entries :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/negativeResponses"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:id="@+id/fails"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fails"
        android:layout_centerHorizontal="true"
        android:id="@+id/setFailed" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setNegative"
        android:layout_alignBaseline="@+id/negativeResponses"
        android:layout_alignBottom="@+id/negativeResponses"
        android:layout_alignStart="@+id/setFailed" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setPositive"
        android:textAlignment="textStart"
        android:layout_above="@+id/negativeResponses"
        android:layout_alignStart="@+id/setNegative" />

    <TextView
        android:text="Profiles Created :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fails"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/profilesCreated"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profilesCreated"
        android:layout_alignStart="@+id/setFailed"
        android:id="@+id/setProfiles" />
</RelativeLayout>

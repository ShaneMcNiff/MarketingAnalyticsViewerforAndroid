<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_campaign_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shane.MAV.MAV_UI.CampaignSummary">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#b2b2b2"
        android:layout_weight="0.15" />

    <TextView
        android:text="CampaignName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/campaignName"
        android:layout_weight="0.15"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progressBarEntries"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="0.05"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/totalEntriesText"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Total entries/Estimated entries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setProgress"
            android:lineSpacingExtra="14sp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_weight="0.14"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/progressBarEntries"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Total Profiles/Estimated Profiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totalProfilesText"
            android:layout_weight="0.15"
            android:textAlignment="center"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/setProgress"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarProfiles"
            android:layout_weight="0.15"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/totalProfilesText"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Profiles created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setProfiles"
            android:layout_weight="0.15"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/progressBarProfiles"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Positive Responses/Negative Responses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/positiveNegative"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/setProfiles"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setPositiveNegative"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/progressBarResponses"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarResponses"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/positiveNegative"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Total Entries/Estimated Entries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totalEntriesText"
            android:layout_weight="0.15"
            android:textAlignment="center"
            android:layout_marginTop="95dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold" />

    </RelativeLayout>

</RelativeLayout>

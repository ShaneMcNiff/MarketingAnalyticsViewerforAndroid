<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question_answer_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shane.MAV.MAV_UI.QuestionAnswerSummary">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#b2b2b2"
        android:layout_weight="0.15" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/questionText"
        android:layout_toEndOf="@+id/questionText"
        android:layout_marginStart="23dp"
        android:id="@+id/setQuestionText" />

    <TextView
        android:text="Answer 1 :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/answer1Text"
        android:layout_below="@+id/questionText"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Question :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:id="@+id/questionText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/answer1Text"
        android:layout_alignStart="@+id/setQuestionText"
        android:id="@+id/setAnswer1" />

    <TextView
        android:text="Answer 2 :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer1Text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:id="@+id/answer2Text"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Answer 3 :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer2Text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/answer3Text"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Answer 4 :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer3Text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/answer4Text"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer4Text"
        android:layout_alignStart="@+id/setAnswer2"
        android:id="@+id/setAnswer3" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/answer4Text"
        android:layout_alignStart="@+id/setAnswer3"
        android:id="@+id/setAnswer4" />

    <TextView
        android:text="Answer 1 results :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer4Text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:id="@+id/statAnswer1"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Answer 2 results :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statAnswer1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:id="@+id/statAnswer2"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Answer 3 results :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statAnswer2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:id="@+id/statAnswer3"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Answer 4 results :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statAnswer3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:id="@+id/statAnswer4"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/statAnswer2"
        android:layout_toEndOf="@+id/statAnswer1"
        android:layout_marginStart="11dp"
        android:id="@+id/setStat1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/statAnswer3"
        android:layout_alignStart="@+id/setStat1"
        android:id="@+id/setStat2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/statAnswer4"
        android:layout_alignStart="@+id/setStat2"
        android:id="@+id/setStat3" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/statAnswer4"
        android:layout_alignStart="@+id/setStat3"
        android:id="@+id/setStat4" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setAnswer2"
        android:layout_alignBaseline="@+id/answer2Text"
        android:layout_alignBottom="@+id/answer2Text"
        android:layout_alignStart="@+id/setAnswer1" />


</RelativeLayout>

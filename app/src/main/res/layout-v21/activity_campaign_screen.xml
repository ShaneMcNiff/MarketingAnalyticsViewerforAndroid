<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_campaign_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CampaignHome"
    android:orientation="vertical">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_weight="0.15" />

    <TextView
        android:text="CampaignName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/campaignName"
        android:layout_weight="0.15"
        android:textAlignment="center" />

    <TextView
        android:text="Total entries/Estimated entries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressText"
        android:lineSpacingExtra="14sp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_weight="0.14" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@+id/spinner"
        android:id="@+id/progressBarEntries"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="0.05" />

    <TextView
        android:text="Amount entries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entriesValue"
        android:layout_weight="0.15"
        android:textAlignment="center" />

    <TextView
        android:text="Profiles created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profilesText"
        android:layout_weight="0.15"
        android:textAlignment="center" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarProfiles"
        android:layout_weight="0.15" />

    <TextView
        android:text="Amount profiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profilesValue"
        android:layout_weight="0.15"
        android:textAlignment="center" />

</LinearLayout>

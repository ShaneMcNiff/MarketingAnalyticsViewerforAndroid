<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_campaign_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shane.MAV.MAV_UI.CampaignSummary">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#b2b2b2"
        android:layout_weight="0.15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Campaign name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CampaignName"
            android:textAlignment="textStart"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="72dp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setCampaignName"
            android:textAlignment="textStart"
            android:layout_below="@+id/CampaignName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp" />

        <TextView
            android:text="Client :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ClientText"
            android:textAlignment="textStart"
            android:layout_below="@+id/setCampaignName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setClientName"
            android:textAlignment="textStart"
            android:layout_below="@+id/ClientText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp" />

        <TextView
            android:text="Description :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DescriptionText"
            android:textAlignment="textStart"
            android:layout_below="@+id/setClientName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setDescription"
            android:textAlignment="textStart"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/DescriptionText"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Goals :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GoalsText"
            android:textAlignment="textStart"
            android:layout_below="@+id/setDescription"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setGoals"
            android:textAlignment="textStart"
            android:layout_below="@+id/GoalsText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/setStartDate"
            android:textAlignment="textStart"
            android:layout_below="@+id/StartDateText"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Start date :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/StartDateText"
            android:textAlignment="textStart"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/setGoals"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold" />

        <TextView
            android:text="End Date :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EndDateText"
            android:layout_marginTop="15dp"
            android:textAlignment="textStart"
            android:layout_below="@+id/setStartDate"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setEndDate"
            android:textAlignment="textStart"
            android:layout_below="@+id/EndDateText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />

    </RelativeLayout>

</RelativeLayout>